  <!-- 日記一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @diaries.present? %>
          <% @diaries.each do |diary| %>
            <div class="col-sm-12 col-lg-4 mb-3">
              <div id="diary-id-<%= diary.id %>">
                <div class="card">
                    <div class="d-flex">
                      <h4 class="card-title">
                        <%= link_to diary.title, diary_path(diary) %>
                      </h4>
                      <ul class="list-inline">
                      <li><i class="bi bi-calendar"></i><%= l diary.created_at, format: :long %></li>
                      </ul>
                      <div class='ms-auto flex space-x-2'>
                        <%= link_to edit_diary_path(diary), id: "button-edit-#{diary.id}", class: 'bg-blue-500 text-white p-2 rounded hover:bg-blue-600' do %>
                          <i class="bi bi-pencil-fill"></i>編集
                        <% end %>
                        <%= link_to diary_path(diary), id: "button-delete-#{diary.id}", method: :delete, data: { turbo_method: :delete, confirm: '' }, class: 'bg-red-500 text-white p-2 rounded hover:bg-red-600' do %>
                          <i class="bi bi-trash-fill"></i>削除
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="mb-3">日記がありません</div>
        <% end %>
      </div>
    </div>
  </div>
<div class="button001">
  <a href="<%= new_diary_path %>">日記を書く</a>
</div>